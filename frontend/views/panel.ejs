<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Panel de Usuario - Ecomerse-Soft</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/panel.css">
</head>
<body>
  <!-- Header -->
  <header>
    <nav class="navbar navbar-light bg-white border-bottom">
      <div class="container d-flex justify-content-between align-items-center">
        <!-- Logo y Nombre -->
        <a class="navbar-brand d-flex align-items-center" href="/">
          <img src="/images/logo.webp" alt="Ecomerse-Soft" style="height: 50px; width: auto; margin-right: 10px;">
          <span class="text-success fw-bold">Ecomerse-Soft</span>
        </a>
        <!-- Botones y Menú Hamburguesa -->
        <div class="d-flex align-items-center">
          <!-- Botón de hamburguesa -->
          <button class="navbar-toggler me-3" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <!-- Botones de Perfil y Cerrar Sesión -->
          <a href="/" class="btn btn-outline-success me-2">Homen</a>
          <a href="/logout" class="btn btn-outline-danger">Cerrar Sesión</a>
        </div>
      </div>
    </nav>
  </header>

  <!-- Sidebar -->
  <div class="collapse sidebar" id="sidebarMenu">
    <ul class="list-unstyled p-3 bg-light">
      <li><a href="#administracion" class="text-decoration-none">Administración</a></li>
      <li><a href="#carrito" class="text-decoration-none">Carrito</a></li>
      <li class="dropdown">
        <a href="#" class="text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">Categorías</a>
        <ul class="dropdown-menu">
          <li><a href="#" class="dropdown-item">Yuca</a></li>
          <li><a href="#" class="dropdown-item">Plátano</a></li>
          <li><a href="#" class="dropdown-item">Ñame</a></li>
          <li><a href="#" class="dropdown-item">Aguacate</a></li>
          <li><a href="#" class="dropdown-item">Maíz</a></li>
        </ul>
      </li>
      <li><a href="#articulosVendidos" class="text-decoration-none">Artículos Vendidos</a></li>
      <li><a href="#articulosComprados" class="text-decoration-none">Artículos Comprados</a></li>
      <li><a href="#agregarProductos" class="text-decoration-none">Agregar Productos</a></li>
      <li><a href="#misProductos" class="text-decoration-none">Mis Productos</a></li>
      <li><a href="#configuracion" class="text-decoration-none">Configuración</a></li>
      <li><a href="/logout" class="text-danger text-decoration-none">Cerrar Sesión</a></li>
    </ul>
  </div>

  <!-- Contenido Principal -->
  <div class="content">
    <!-- Header de Sección -->
    <header class="my-4">
      <h1>Panel de Usuario</h1>
    </header>
    <!-- Productos -->
    <section id="productos">
      <h2>Productos</h2>
      <div class="product-grid" id="productList">
        <!-- Productos cargados dinámicamente -->
      </div>
    </section>
  </div>

    <!-- Include Footer Partial -->
    <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
